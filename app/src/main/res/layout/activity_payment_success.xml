<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F6FFF6"
    android:padding="32dp">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@android:drawable/checkbox_on_background"
        android:contentDescription="Success" />

    <TextView
        android:id="@+id/tvSuccessTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanh toán thành công!"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tvSuccessMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cảm ơn bạn đã sử dụng dịch vụ."
        android:textSize="16sp"
        android:textColor="#333"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnBackToHomeSuccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quay về trang chủ"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

</LinearLayout> 