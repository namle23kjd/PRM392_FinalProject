<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="#f8f9fa"
            android:layout_marginEnd="16dp"
            android:src="@android:drawable/ic_menu_gallery" />

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Product Name -->
            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Product Code -->
            <TextView
                android:id="@+id/tvProductCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã: SP001"
                android:textSize="12sp"
                android:textColor="#7f8c8d"
                android:layout_marginTop="4dp" />

            <!-- Category -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loại: Điện tử"
                android:textSize="12sp"
                android:textColor="#34495e"
                android:layout_marginTop="2dp" />

            <!-- Price -->
            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="500,000₫"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#e74c3c"
                android:layout_marginTop="8dp" />

            <!-- Stock Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvQuantityInStock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tồn kho: 100"
                    android:textSize="12sp"
                    android:textColor="#2c3e50"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvStockQuantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kho: 150"
                    android:textSize="12sp"
                    android:textColor="#2c3e50" />

            </LinearLayout>

            <!-- Status and Warning Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hoạt động"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#27ae60" />

                <TextView
                    android:id="@+id/tvLowStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SẮP HẾT"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#e67e22"
                    android:background="#ffeaa7"
                    android:padding="4dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Additional Info -->
            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trọng lượng: 1.5kg"
                android:textSize="11sp"
                android:textColor="#7f8c8d"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xuất xứ: Việt Nam"
                android:textSize="11sp"
                android:textColor="#7f8c8d"
                android:layout_marginTop="2dp"
                android:visibility="gone" />

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả sản phẩm..."
                android:textSize="11sp"
                android:textColor="#95a5a6"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>