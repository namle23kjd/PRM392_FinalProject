<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.PRM392_FinalProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here -->
        <item name="colorError">@color/status_inactive</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/status_background</item>
        <item name="colorOnErrorContainer">@color/status_inactive</item>

        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/primary_text</item>
        <item name="colorSurfaceVariant">@color/gray</item>
        <item name="colorOnSurfaceVariant">@color/gray_dark</item>

        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/primary_text</item>

        <!-- ActionBar -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>

    <!-- Theme for MapActivity without ActionBar -->
    <style name="Theme.PRM392_FinalProject.NoActionBar" parent="Theme.PRM392_FinalProject">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- Theme for Splash Screen -->
    <style name="Theme.PRM392_FinalProject.Splash" parent="Theme.PRM392_FinalProject.NoActionBar">
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- Custom ActionBar Style -->
    <style name="CustomActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/primary</item>
        <item name="titleTextStyle">@style/CustomActionBarTitle</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Custom ActionBar Title -->
    <style name="CustomActionBarTitle" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button Styles -->
    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="CustomButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomButton.Success">
        <item name="backgroundTint">@color/status_active</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomButton.Secondary">
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/gray_dark</item>
    </style>

    <!-- Card Style -->
    <style name="CustomCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>
</resources>
